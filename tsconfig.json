{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
    },
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["jest", "@testing-library/jest-dom"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
